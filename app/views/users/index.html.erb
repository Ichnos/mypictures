<%= render 'shared/page_title', title: "Showing all users" %>

<div align="center">
 
</div>

  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="user-title"><%= link_to user.username.capitalize, user_path(user) %></li>
    	  <li><small><%= pluralize(user.pictures.count, "picture") if user.pictures %></small></li>
    	  <li><%= link_to "Delete this user", user_path(user), method: :delete, 
    	  		data: {confirm: "Are you sure you want to delete this user and all associated pictures?"} %></li>            
        </div>
      </div>
    </ul>      
  <% end %>
  
<div align="center">  

</div>
