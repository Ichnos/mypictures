  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<% if @user.pictures.count != 0 %>
	<h4 align="center"><%= @user.username.capitalize %>'s pictures</h4>
	<div align="center">
	 
	</div>
	<%= render 'pictures/picture', obj: @user_pictures %>
	<div align="center">
	 
	</div>
<% else %>
	<h4 align="center">No pictures yet!</h4>
<% end %>
